# ═══════════════════════════════════════════════════════════════════
# GPS Mock Location Backend - Environment Variables
# Copy this file to .env and update values for your environment
# ═══════════════════════════════════════════════════════════════════

# Server Configuration
PORT=4000
NODE_ENV=development

# Database (PostgreSQL)
# For Docker: postgresql://gps_user:gps_password@postgres:5432/gps_mock_db
# For Local:  postgresql://gps_user:gps_password@localhost:5432/gps_mock_db
DATABASE_URL=postgresql://gps_user:gps_password@localhost:5432/gps_mock_db

# Redis
# For Docker: redis://redis:6379
# For Local:  redis://localhost:6379
REDIS_URL=redis://localhost:6379

# JWT Configuration
# IMPORTANT: Change this in production to a strong random string!
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# Default Admin User (created on first run)
DEFAULT_ADMIN_PASSWORD=admin123

# Redis TTLs (seconds) - Optional, defaults provided
# WS_AUTH_TTL=900
# WS_CONN_TTL=120

# OpenRouteService (ORS)
ORS_API_KEY=your_ors_api_key_here
ORS_API_URL=https://api.openrouteservice.org
ORS_GEOCODING_CACHE_TTL=86400
ORS_DEFAULT_POINT_SPACING=15

# Stream Defaults (optional)
STREAM_TICK_MS=1000          # Emit interval in ms (default: 1000)
STREAM_DEFAULT_SPEED=30      # Default speed in km/h (default: 30)
STREAM_DEFAULT_ACCURACY=5    # Default accuracy in meters (default: 5)
STREAM_DEFAULT_LOOP=false    # Default loop behavior (default: false)

# Rate Limiting (optional)
RATE_LIMIT_ADDRESSES=20
RATE_LIMIT_WINDOW=60

# Server
PORT=4000
NODE_ENV=development

# Database (PostgreSQL)
# For Docker: postgresql://gps_user:gps_password@postgres:5432/gps_mock_db
# For Local:  postgresql://gps_user:gps_password@localhost:5432/gps_mock_db
DATABASE_URL=postgresql://gps_user:gps_password@postgres:5432/gps_mock_db

# Redis
# For Docker: redis://redis:6379
# For Local:  redis://localhost:6379
REDIS_URL=redis://redis:6379

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Default Admin
DEFAULT_ADMIN_PASSWORD=admin123

# OpenRouteService (ORS)
ORS_API_KEY=eyJvcmciOiI1YjNjZTM1OTc4NTExMTAwMDFjZjYyNDgiLCJpZCI6IjVjYTdhOGU4OTFiNzRiZDE5ZTIxNTc0ODE1Yjc4NmM3IiwiaCI6Im11cm11cjY0In0=
ORS_API_URL=https://api.openrouteservice.org
# Stream Backpressure Settings
STREAM_WS_BACKPRESSURE_ENABLED=true
STREAM_WS_BUFFERED_MAX_BYTES=262144
STREAM_WS_TCP_MAX_BYTES=524288
STREAM_WS_PRESSURE_STRIKES_TO_PAUSE=10
STREAM_WS_PRESSURE_WINDOW_MS=15000

# OpenRouteService Cache
ORS_GEOCODING_CACHE_TTL=86400

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_ADDRESSES=20
RATE_LIMIT_WINDOW=60

# Redis TTLs
WS_AUTH_TTL=900
WS_CONN_TTL=120

# Base URL — CRÍTICO: debe ser la IP de tu máquina con el puerto 4000
# El Android escanea el QR que contiene esta URL para conectarse
# Cambia 192.168.1.2 por la IP real de tu PC en la red WiFi
BASE_URL=http://192.168.1.2:4000
